generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model Costume {
  id             Int            @id @default(autoincrement())
  displayOrder   Int
  name           String
  nameEn         String
  isOfficialName Boolean        @default(false)
  debutEventId   Int?
  artistId       Int?
  note           String?
  images         CostumeImage[]
}

model CostumeImage {
  id           Int     @id @default(autoincrement())
  costumeId    Int
  displayOrder Int
  imageKey     String
  creditName   String
  creditUrl    String
  description  String
  costume      Costume @relation(fields: [costumeId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([costumeId], map: "costume_id")
}

model CostumeTweet {
  id        Int    @id @default(autoincrement())
  costumeId Int
  tweetId   String
}

model Song {
  id           Int     @id @default(autoincrement())
  title        String
  kana         String
  titleEn      String
  jasracCode   String?
  iswcCode     String?
  thumbnailUrl String?
}

model YouTubeChannel {
  id           String @id
  title        String
  displayOrder Int
}

model YouTubeVideo {
  id                 String @id
  publishedTimestamp Int
  channelId          String
  title              String
}
